<data readOnly="true">
        <keyValueCollection id="salesDc">
            <loader id="salesDl">
                <query>
                    <![CDATA[select o.customer, sum(o.amount) from sales_Order o group by o.customer]]>
                </query>
            </loader>
            <properties>
                <property class="com.company.sales.entity.Customer" name="customer"/>
                <property datatype="decimal" name="sum"/>
            </properties>
        </keyValueCollection>
</data>